{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <div>
            <div class="row" style="margin-bottom: 5px" id="postId" >{{ record.date }}</div>
            <div class="row">
                <div style="padding: 0 0" class="col-5">
                    <img  style="max-width: 300px; max-height: 300px; border: 4px solid #D3D3D3;" src="{{ ('../uploads/') ~ record.image_name }}" alt="">
                </div>
                <div class="col-6" style="word-wrap: break-word">
                    {{ record.description }}
                </div>
            </div>
        </div>
        <div class="row">
            <div>
                <form method="get" action="https://127.0.0.1:8000/posts">
                    <button style="width: 70px" class="btn btn-secondary" type="submit">Back</button>
                </form>
            </div>
            <div style="margin-left: 5px">
                {% if is_granted('ROLE_ADMIN') %}
                    <form method="get" action="https://127.0.0.1:8000/posts/update/{{ record.id }}">
                        <button style="width: 70px" class="btn btn-primary" type="submit">Edit</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
